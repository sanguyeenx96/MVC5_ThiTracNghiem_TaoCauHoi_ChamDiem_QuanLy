
@{
    Layout = null;
}
<title>Bắt đầu</title>


<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Load bootstrap 3 -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/login-bs3/assets/bootstrap/css/bootstrap.css" />

    <!-- Custom style -->
    <style>
        body {
            background-color: #6096B4;
        }

        .panel-style {
            padding-top: 20%;
        }
    </style>
    <script>
        $("input").prop('required', true);
    </script>
</head>
<body>
    <div class="container">
        <div class="col-md-4 col-md-offset-4 panel-style">
            @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @ViewBag.msg
                </div>
            }
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <strong>
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>  Phòng thi
                        </strong>
                    </h3>
                </div>
                <div class="panel-body">
                    <form action="" method="post">

                        @if (ViewBag.error != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.error
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                Nhập số phòng thi để bắt đầu.
                            </div>

                        }
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <input type="text" id="" name="room" placeholder="Số phòng thi" class="form-control" />
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success btn-block">
                                    <span aria-hidden="true"></span>
                                    Bắt đầu thi
                                </button>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/login-bs3/assets/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/login-bs3/assets/bootstrap/js/bootstrap.js"></script>
</body>
</html>



