@model QuizApp.Models.tbl_category

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using QuizApp.Models
@{
    QuizAppEntities db = new QuizAppEntities();
}

<title>Trang chính</title>


<div>
    <div class="col-lg-12">
        <div style="text-align:center; margin-top:20px">
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-cube fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">
                                        @{
                                            var chude = db.tbl_category.Count();
                                        }
                                        @chude
                                    </div>
                                    <div>Chủ đề</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-comments-o fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">
                                        @{
                                            var cauhoi = db.tbl_questions.Count();
                                        }
                                        @cauhoi
                                    </div>
                                    <div>Câu hỏi</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-child fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">
                                        @{
                                            var user = db.students.Count();
                                        }
                                        @user
                                    </div>
                                    <div>User</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading" >
                <strong> <i class="fa fa-list"></i> Danh sách các chủ đề, phòng thi, câu hỏi</strong>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive" style="max-height:450px">
                    <table class="table table-hover">
                        <thead>
                            <tr>

                                <th class="col-xs-6">Tên chủ đề</th>
                                <th class="col-xs-3" style="text-align:center">Số phòng thi</th>

                                <th class="col-xs-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewData["list"] as List<QuizApp.Models.tbl_category>)
                            {
                                <tr>

                                    <td>@item.cat_name</td>
                                    <td style="text-align:center">@item.cat_id</td>
                                    <td style="text-align:center"><a class="btn btn-info" href="@Url.Action("ViewAllQuestion", new {id=item.cat_id})"> Xem chi tiết</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>