@model QuizApp.Models.student


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Load bootstrap 3 -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/login-bs3/assets/bootstrap/css/bootstrap.css" />

    <!-- Custom style -->
    <style>
        body {
            background-color: #6096B4;
        }

        .panel-style {
            padding-top: 15%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="col-md-4 col-md-offset-4 panel-style">
            @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @ViewBag.msg
                </div>
            }
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <strong>
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  User
                        </strong>
                    </h3>
                </div>
                <div class="panel-body">
                    <form action="" method="post">
                        <div class="alert alert-warning">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            Đây là trang đăng nhập của tài khoản người dùng.
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.std_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đăng nhập" } })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.std_password, new { @class = "form-control", placeholder = "Mật khẩu" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                <span aria-hidden="true"></span>
                                Đăng nhập
                            </button>
                        </div>
                        @Html.ActionLink("| Đăng ký", "sregister")
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/login-bs3/assets/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/login-bs3/assets/bootstrap/js/bootstrap.js"></script>
</body>
</html>



