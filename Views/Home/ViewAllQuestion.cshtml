@model IEnumerable<QuizApp.Models.tbl_questions>

@{
    ViewBag.Title = "ViewAllQuestion";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<title>Danh sách các câu hỏi trong chủ đề</title>


<div class="col-lg-12" style="margin-top:20px">
    <div class="panel panel-info">
        <div class="panel-heading">
            <i class="fa fa-list"></i> Danh sách các câu hỏi trong chủ đề
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive" style="max-height:550px">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="success">
                        <tr>
                            <th>
                                Câu hỏi
                            </th>
                            <th>
                                A.
                            </th>
                            <th>
                                B.
                            </th>
                            <th>
                                C.
                            </th>
                            <th>
                                D.
                            </th>
                            <th>
                                Đáp án
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col-lg-5">
                                    @Html.DisplayFor(modelItem => item.q_text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QCorrectAns)
                                </td>

                                <td class="col-xs-2" style="text-align:center">
                                    <a href="#" class="btn btn-xs btn-info btn-block">
                                        <i class="fa fa-eye"></i> Xem
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = item.q_id })" class="btn btn-xs btn-warning btn-block">
                                        <i class="fa fa-pencil"></i> Sửa
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.q_id })" class="btn btn-xs btn-danger btn-block">
                                        <i class="fa fa-trash"></i> Xoá
                                    </a>

                                </td>
                            </tr>
                        }

                    </tbody>


                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>






